{
  "name": "Z-Wave to MQTT",
  "version": "3.2.2.20",
  "slug": "zwave2mqtt",
  "description": "Fully configurable Z-Wave to MQTT gateway and control panel",
  "url": "https://github.com/hassio-addons/addon-zwave2mqtt",
  "ingress": true,
  "ingress_port": 8091,
  "panel_icon": "mdi:z-wave",
  "panel_title": "Z-Wave MQTT",
  "startup": "system",
  "init": false,
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "ports": {
    "8091/tcp": null
  },
  "ports_description": {
    "8091/tcp": "Not Required For Ingress",
    "22/tcp": "SSHD Port - for remote access"
  },
  "boot": "auto",
  "auth_api": true,
  "hassio_api": true,
  "hassio_role": "default",
  "auto_uart": true,
  "map": ["config:rw", "share:rw", "ssl:rw"],
  "options": {
    "enable_ssh": true,
    "root_password": ""
  },
  "schema": {
    "enable_ssh": "boolean?",
    "root_password": "password?"
  }
}
